  #              aes(label = name), 
  #              label.size = NA,
  #              fill = NA) + 
  annotation_north_arrow(aes(location = "br")) + 
  annotation_scale() + 
  xlab(NULL) + 
  ylab(NULL) +
  labs(fill = "LISA Cluster") + 
  theme_minimal() 

